<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>fi.hut.cs.drumbeat</groupId>
	<artifactId>drumbeat-test-ldp4j</artifactId>
	<packaging>war</packaging>
	<version>0.0.1-SNAPSHOT</version>
	<name>drumbeat-test-ldp4j Maven Webapp</name>
	<url>http://maven.apache.org</url>
	<properties>
		<ldp4j.version>1.0.0-SNAPSHOT</ldp4j.version>
		<log4j.version>1.2.17</log4j.version>
		<!-- Other properties here -->
	</properties>
	<dependencies>

		<dependency>
			<groupId>org.ldp4j.framework</groupId>
			<artifactId>ldp4j-application-api</artifactId>
			<version>${ldp4j.version}</version>
		</dependency>
		<dependency>
			<groupId>org.ldp4j.framework</groupId>
			<artifactId>ldp4j-server-core</artifactId>
			<scope>runtime</scope>
			<version>${ldp4j.version}</version>
		</dependency>

		<!-- Apache Log4j -->
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>${log4j.version}</version>
		</dependency>

		<dependency>
			<groupId>xml-apis</groupId>
			<artifactId>xml-apis</artifactId>
			<version>1.4.01</version>
		</dependency>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
		</plugins>
		<finalName>drumbeat-test-ldp4j</finalName>
	</build>
</project>
